<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_5"
    android:background="@drawable/border"
    android:padding="@dimen/defaultPadding"
    tools:context=".inventory.ItemFragment">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@android:color/transparent"
        android:id="@+id/btn_ShowAddMenu"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ItemName"
                android:textSize="@dimen/headerFontSize" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/minimalna_kolicina" />

                <TextView
                    android:id="@+id/tv_MinSupply"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="minSupply"
                    android:textFontWeight="700" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_CurrentSupply"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Trenutno"
            android:textFontWeight="700"
            android:textSize="@dimen/headerFontSize" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>